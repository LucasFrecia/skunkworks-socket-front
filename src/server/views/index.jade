doctype html
html
  head
    title= title
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(property="og:url"  name="twitter:url" content= url)
    meta(property="og:title" name="twitter:title" content= title)
    meta(property="og:description" name="twitter:description" content= descriptionText)
    meta(property="og:image" name="twitter:image" content= imageUrl)
    meta(property="og:type" content="article")
    meta(name="twitter:card" content="summary_large_image")
    style(type="text/css").
      .body {
        font-size: 1.125em;
        line-height: 1.5;
        color: #444;
      }
    style(type="text/css").
      li {
        margin-bottom: .75rem;
        color: #3ba9dc!important;
        font-size: 1.5rem;
        font-weight: 500;
        line-height: 1.1;
        font-family: Arial,Helvetica,sans-serif;
      }
    style(type="text/css").
      img {
        min-width: 100%!important;
        overflow: hidden;
      }
    style(type="text/css").
      .full-width-div {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 5px;
        overflow: hidden;
        display: inline-block;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 0;
        display: block;
        position: relative;
        overflow: hidden;
      }
    style(type="text/css").
      html, body {
        margin:0;
        padding:5;
        width:100%;
        height:100%;
      }
  body
    div(class="full-width-div")
      h1 Informe Sin Bandera 
      h3 Noticias las 24 horas al minuto
      each item in rows
        img(src= item.image)
        a(href= item.url_short)
            li= item.title